    <PackageReference Include="Cadmus.Graph.Ef.MySql" Version="7.0.2" />
    <PackageReference Include="Cadmus.Graph.Ef.PgSql" Version="7.0.2" />
    <PackageReference Include="Cadmus.Graph.Extras" Version="7.0.2" />
    <PackageReference Include="Cadmus.Import" Version="4.0.16" />
    <PackageReference Include="Cadmus.Import.Excel" Version="4.0.16" />
    <PackageReference Include="Cadmus.Index" Version="7.0.2" />
    <PackageReference Include="Cadmus.Index.Ef.MySql" Version="7.0.2" />
    <PackageReference Include="Cadmus.Index.Ef.PgSql" Version="7.0.2" />
    <PackageReference Include="Cadmus.Index.MySql" Version="7.0.2" />
    <PackageReference Include="Cadmus.Index.PgSql" Version="7.0.2" />
    <PackageReference Include="Cadmus.Index.Sql" Version="7.0.2" />
    <PackageReference Include="Cadmus.Mongo" Version="7.0.2" />
    <PackageReference Include="Cadmus.Philology.Parts" Version="8.1.1" />
    <PackageReference Include="Cadmus.Seed" Version="7.0.2" />
    <PackageReference Include="Cadmus.Seed.General.Parts" Version="6.0.4" />
    <PackageReference Include="Cadmus.Seed.Philology.Parts" Version="8.1.1" />
    <PackageReference Include="Fusi.Microsoft.Extensions.Configuration.InMemoryJson" Version="3.0.0" />
    <PackageReference Include="Fusi.Text" Version="4.0.1" />
    <PackageReference Include="Fusi.Tools" Version="4.0.0" />
    <PackageReference Include="Fusi.Tools.Configuration" Version="4.0.0" />
    <PackageReference Include="McMaster.NETCore.Plugins" Version="1.4.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
