<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>cadmus_tool</RootNamespace>
	  <Authors>Daniele Fusi</Authors>
	  <Company>Fusi</Company>
	  <Product>Cadmus</Product>
	  <Description>Cadmus CLI utility tool</Description>
	  <Copyright>by Daniele Fusi</Copyright>
	  <NeutralLanguage>en-US</NeutralLanguage>
	  <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
	  <Version>2.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appsettings.json" />
    <None Remove="plugins\README.txt" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="plugins\README.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets\LoremIpsum.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Bogus" Version="33.1.1" />
    <PackageReference Include="Cadmus.Cli.Core" Version="1.0.1" />
    <PackageReference Include="Cadmus.Core" Version="2.4.1" />
    <PackageReference Include="Cadmus.Index" Version="1.3.4" />
    <PackageReference Include="Cadmus.Index.MsSql" Version="1.1.7" />
    <PackageReference Include="Cadmus.Index.MySql" Version="1.1.8" />
    <PackageReference Include="Cadmus.Index.Sql" Version="1.2.8" />
    <PackageReference Include="Cadmus.Itinera.Parts" Version="1.1.18" />
    <PackageReference Include="Cadmus.Mongo" Version="2.4.2" />
    <PackageReference Include="Cadmus.Parts" Version="2.5.3" />
    <PackageReference Include="Cadmus.Philology.Parts" Version="2.4.2" />
    <PackageReference Include="Cadmus.Seed" Version="1.2.1" />
    <PackageReference Include="Cadmus.Seed.Itinera.Parts" Version="1.1.20" />
    <PackageReference Include="Cadmus.Seed.Parts" Version="1.3.3" />
    <PackageReference Include="Cadmus.Seed.Philology.Parts" Version="1.2.2" />
    <PackageReference Include="Cadmus.Seed.Tgr.Parts" Version="1.1.1" />
    <PackageReference Include="Cadmus.Tgr.Parts" Version="1.1.1" />
    <PackageReference Include="Fusi.Microsoft.Extensions.Configuration.InMemoryJson" Version="1.0.3" />
    <PackageReference Include="Fusi.Text" Version="1.1.13" />
    <PackageReference Include="Fusi.Tools" Version="1.1.17" />
    <PackageReference Include="Fusi.Tools.Config" Version="1.0.19" />
    <PackageReference Include="McMaster.NETCore.Plugins" Version="1.4.0" />
    <PackageReference Include="Microsoft.Extensions.CommandLineUtils" Version="1.1.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="5.0.0" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="3.1.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
    <PackageReference Include="ShellProgressBar" Version="5.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="appsettings.json" />
  </ItemGroup>

</Project>
