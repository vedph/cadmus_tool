<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>cadmus_tool</RootNamespace>
	  <Authors>Daniele Fusi</Authors>
	  <Company>Fusi</Company>
	  <Product>Cadmus</Product>
	  <Description>Cadmus CLI utility tool</Description>
	  <Copyright>by Daniele Fusi</Copyright>
	  <NeutralLanguage>en-US</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appsettings.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets\LoremIpsum.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Bogus" Version="32.0.1" />
    <PackageReference Include="Cadmus.Core" Version="2.3.1" />
    <PackageReference Include="Cadmus.Index.Sql" Version="1.1.4" />
    <PackageReference Include="Cadmus.Mongo" Version="2.3.4" />
    <PackageReference Include="Cadmus.Parts" Version="2.3.1" />
    <PackageReference Include="Cadmus.Philology.Parts" Version="2.3.1" />
    <PackageReference Include="Cadmus.Seed" Version="1.1.2" />
    <PackageReference Include="Cadmus.Seed.Parts" Version="1.1.2" />
    <PackageReference Include="Cadmus.Seed.Philology.Parts" Version="1.1.2" />
    <PackageReference Include="Fusi.Microsoft.Extensions.Configuration.InMemoryJson" Version="1.0.2" />
    <PackageReference Include="Fusi.Text" Version="1.1.12" />
    <PackageReference Include="Fusi.Tools" Version="1.1.15" />
    <PackageReference Include="Fusi.Tools.Config" Version="1.0.17" />
    <PackageReference Include="Microsoft.Extensions.CommandLineUtils" Version="1.1.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="5.0.0" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="4.1.0" />
    <PackageReference Include="ShellProgressBar" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="appsettings.json" />
  </ItemGroup>

</Project>
